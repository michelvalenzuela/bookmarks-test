<%= form_with(model: bookmark, remote: true, data: {confirm: "Estas Seguro de registrar el marcador?"}) do |form| %>
  <% if bookmark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

      <ul>
      <% bookmark.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name%>
    <%= form.text_field :name, id: :bookmark_name, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url, id: :bookmark_url, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :kind_id %>
    <%= form.select :kind_id, Kind.all.collect {|k| [k.name, k.id]}, {} ,id: :bookmark_kind_id, include_blank:false, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.select :category_id, Category.all.collect {|c| [c.name, c.id]}, {} ,id: :bookmark_category_id, include_blank:false, :class => "form-control" %>
  </div>

  <div class="actions m-3 float-right">
    <%= form.submit class: "btn btn-outline-secondary", value: 'Guardar Marcador'%>
  </div>
<% end %>
